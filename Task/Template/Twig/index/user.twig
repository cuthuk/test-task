{% extends "layout.twig" %}
{%  block body %}
    <h3> hello {{ user.login }} </h3>

    <a href="/logout"> Выход </a>
    <div id="comments">
        {% include 'comment/list.twig' %}
    </div>
    <div id="add-dialog-form" title="add comment" style="display:none">
        <form>
            <fieldset>
                <input type="hidden" id="parent_id" name="parent_id" value="0">
                <input type="text" name="comment" id="comment" value="" class="text ui-widget-content ui-corner-all">
                <input type="submit" value="add">
            </fieldset>
        </form>
    </div>
    <div id="edit-dialog-form" title="edit comment" style="display:none">
        <form>
            <fieldset>
                <input type="hidden" id="id" name="id" value="0">
                <input type="text" name="comment" id="comment" value="" class="text ui-widget-content ui-corner-all">
                <input type="submit" value="edit">
            </fieldset>
        </form>
    </div>
{%  endblock %}